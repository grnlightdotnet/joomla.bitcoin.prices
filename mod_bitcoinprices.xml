<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Bitcoin Pricing</name>
    <author>GrnLight.net</author>
	<creationDate>October 14th, 2013</creationDate>
	<authorEmail>admin@grnlight.net</authorEmail>
	<authorUrl>http://www.grnlight.net/index.php/bitcoin-prices-module</authorUrl>
    <version>1.3.3</version>
	<license>GNU GPL v3</license>
    <description>
	A simple module displaying weighted bitcoin prices from BitcoinCharts.com
	<![CDATA[ <br /> <b>If you found this module useful, please consider donating: <a href="bitcoin:1DsJTEDj7LdfkDx8jhKGwn2wGXDNZ8iGHu">1DsJTEDj7LdfkDx8jhKGwn2wGXDNZ8iGHu</a><br />
		<br /><a href="http://www.grnlight.net/index.php/bitcoin-prices-module">Help and Documentation</a><br />
		<br />
		<b>Getting Started:</b><br />
		To get started, go to Extensions -> Module Manager.<br />
		Click on the "Bitcoin Pricing" module.<br />
		Choose Position, change Status to "Published", and change Module Assignment.<br />
		Save.<br />
		]]>
	</description>
    <files>
        <filename>mod_bitcoinprices.xml</filename>
        <filename module="mod_bitcoinprices">mod_bitcoinprices.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
		<filename>LICENSE.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
		<fields name="params">
		<fieldset name="basic">
		<field name="btc_currency" type="list" default="USD" label="Select currency" description="Select the currency you want to see the value of bitcoin in.">
		  <option value="USD">US Dollar</option>
		  <option value="ARS">Argentina Peso</option>
		  <option value="AUD">Australia Dollar</option>
		  <option value="BRL">Brazil Real</option>
		  <option value="CAD">Canada Dollar</option>
		  <option value="CHF">Switzerland Franc</option>
		  <option value="CNY">China Yuan Renminbi</option>
		  <option value="CZK">Czech Republic Koruna</option>
		  <option value="DKK">Denmark Krone</option>
		  <option value="EUR">Euro</option>
		  <option value="GBP">United Kingdom Pound</option>
		  <option value="HKD">Hong Kong Dollar</option>
		  <option value="ILS">Israel Shekel</option>
		  <option value="INR">India Rupee</option>
		  <option value="JPY">Japan Yen</option>
		  <option value="LTC">Justcoin</option>
		  <option value="MXN">Mexico Peso</option>
		  <option value="NOK">Norway Krone</option>
		  <option value="NZD">New Zealand Dollar</option>
		  <option value="PLN">Poland Zloty</option>
		  <option value="RUB">Russia Ruble</option>
		  <option value="SEK">Sweden Krona</option>
		  <option value="SGD">Singapore Dollar</option>
		  <option value="SLL">Sierra Leone Leone</option>
		  <option value="THB">Thailand Baht</option>
		  <option value="XRP">Ripple</option>
		  <option value="ZAR">South Africa Rand</option>
		</field>
		<field name="btc_time" type="list" default="24h" label="Select time" description="Select the amount of time for the weighted average.">
		  <option value="24h">24 hours</option>	
		  <option value="7d">7 days</option>
		  <option value="30d">30 days</option>	
		</field>
		</fieldset>
		</fields>
			</config>
</extension>
